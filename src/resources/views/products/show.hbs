      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
    </div>
  </div>

  <div class="col-sm-7">
    <div class="product-information" id="product-information">
      <!--/product-information-->
      {{#if (or (ne priceDetail.minPrice priceDetail.minPriceBase) (ne priceDetail.maxPrice
      priceDetail.maxPriceBase))}}
      <img src="/images/product-details/sale.jpg" class="newarrival" alt="">
      {{else}}
      {{#if (eq product.condition 'new')}}
      <img src="/images/product-details/new.jpg" class="newarrival" alt="" />
      {{/if}}
      {{/if}}
      <h2>{{product.name}}</h2>

      <form method="POST" action="/cart">
        <input type="hidden" name="productId" id="productId" value="{{product._id}}" />
        </p>
        <p><img src="/images/product-details/rating.png" alt="" /></p>
        {{#if (or (ne priceDetail.minPrice priceDetail.minPriceBase) (ne priceDetail.maxPrice
        priceDetail.maxPriceBase))}}
        {{#if (ne priceDetail.minPriceBase priceDetail.maxPriceBase)}}
        <p class="priceBefore" id="priceBefore">{{priceDetail.minPriceBase}} - {{priceDetail.maxPriceBase}}
          {{product.skus.[0].price.currency}}</p>
        {{else}}
        <p class="priceBefore" id="priceBefore">{{priceDetail.maxPriceBase}} {{product.skus.[0].price.currency}}
        </p>
        {{/if}}
        {{/if}}

        <span style="margin: 0px; ">
          {{#if (ne priceDetail.minPrice priceDetail.maxPrice)}}
          <span style="display:block; margin: 0px" id="priceCurrent">{{priceDetail.minPrice}} -
            {{priceDetail.maxPrice}}
            {{product.skus.[0].price.currency}}</span>
          {{else}}
          <span style="display:block; margin: 0px" id="priceCurrent">{{priceDetail.maxPrice}}
            {{product.skus.[0].price.currency}}</span>
          {{/if}}
        </span>

        <p>
          <span style="margin: 0px; ">
            <input required type=" text" value="1" name="quantity" />
          </span>

          <button type="submit" class="btn btn-fefault cart" id="cart-btn">
            <i class="fa fa-shopping-cart"></i>
            Add to cart
          </button>
        </p>
        <p>
          <b>Quantity: </b><span id="quantity">{{totalQuantity}}</span>
        </p>
        <p><b>Availability:</b> In Stock</p>
        <p><b>Condition:</b> New</p>
        <p><b>Sizes:</b></p>
        <div id="size-list">
