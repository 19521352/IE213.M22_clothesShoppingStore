          <a href=""><img src="/images/product-details/similar2.jpg" alt=""></a>
          <a href=""><img src="/images/product-details/similar3.jpg" alt=""></a>
        </div>

      </div>

      <!-- Controls -->
      <a class="left item-control" href="#similar-product" data-slide="prev">
        <i class="fa fa-angle-left"></i>
      </a>
      <a class="right item-control" href="#similar-product" data-slide="next">
        <i class="fa fa-angle-right"></i>
      </a>
    </div>

  </div>
  <div class="col-sm-7">
    <div class="product-information">
      <!--/product-information-->
      <img src="/images/product-details/new.jpg" class="newarrival" alt="" />
      <h2>{{product.name}}</h2>
      <p>Web ID: <span class="size">{{product._id}}</span></p>
      <img src="/images/product-details/rating.png" alt="" />
      <span>
        <span>{{product.products_list.[0].price.base}} {{product.products_list.[0].price.currency}}</span>
        <input type="text" value="3" />
        <button type="button" class="btn btn-fefault cart" id="cart-btn">
          <i class="fa fa-shopping-cart"></i>
          Add to cart
        </button>
      </span>
      <p><b>Quantity:</b> </p>
      <p><b>Availability:</b> In Stock</p>
      <p><b>Condition:</b> New</p>
      <p><b>Brand:</b> {{product.company}}</p>
      <p><b>Sizes:</b></p>
      <div class="sizes" data-toggle="buttons">
        {{#each sizeList}}
        <input class="btn-check" type="radio" id="size-{{this}}" name="productColorList[]" autocomplete="off">
        <label class="btn btn-warning size-btn" for="size-{{this}}">
          <span style="margin-top: 0px">{{this}}</span>
        </label>
        {{/each}}
      </div>

      <p><b>Sizes example:</b></p>
      <div class="sizes" data-toggle="buttons">
        <label class="btn btn-warning" disabled="disabled">
          <input type="radio" name="options" id="option2" autocomplete="off">
          <span style="margin-top: 0px">S</span>
        </label>
        <label class="btn btn-warning">
          <input type="radio" name="options" id="option2" autocomplete="off">
          <span style="margin-top: 0px">M</span>
        </label>
        <label class="btn btn-warning">
          <input type="radio" name="options" id="option2" autocomplete="off">
          <span style="margin-top: 0px">XL</span>
        </label>
      </div>

      <p><b>Colors:</b></p>
      <div class="colors" data-toggle="buttons">
        {{#each colorList}}
        <label class="btn btn-warning" style="background: {{this}}">
          <input type="radio" name="options" id="option2" autocomplete="off">
          <span class="glyphicon glyphicon-ok" style="margin-top: 0px"></span>
        </label>
        {{/each}}
      </div>
      <p><b>Colors example:</b></p>
      <div class="colors" data-toggle="buttons">
        <label class="btn btn-warning" style="background: red" disabled="disabled">
          <input type="radio" name="options" id="option2" autocomplete="off" disabled>
          <span class="glyphicon glyphicon-remove" style="margin-top: 0px"></span>
        </label>
        <label class="btn btn-warning" style="background: orange ">
          <input type="radio" name="options" id="option2" autocomplete="off">
          <span class="glyphicon glyphicon-ok" style="margin-top: 0px"></span>
        </label>
        <label class="btn btn-warning" style="background: blue">
          <input type="radio" name="options" id="option2" autocomplete="off">
          <span class="glyphicon glyphicon-ok" style="margin-top: 0px"></span>
        </label>
      </div>

      <a href=""><img src="/images/product-details/share.png" class="share img-responsive" alt="" /></a>
    </div>
    <!--/product-information-->
  </div>
</div>

